{% extends 'default.html.twig' %}

{% block content_wrapper %}
    {% block jumbo_wrapper %}
        <header class="md:flex bg-gray-700 py-20 items-center">
            <div class="md:flex md:w-2/3 w-5/6 mx-auto">
            <div class="md:flex-shrink-0 px-20 mb-10 md:mb-0 md:w-1/2">
                <img class="rounded-b-full md:w-56 mx-auto border-teal-400 border-8 p-1" src="{{ site.url }}/build/faces/512x512.png" alt="An illustration of a sailboat with faces drawn on sails">
            </div>
            <div class="mt-4 md:mt-0 md:ml-6 md:w-1/2">
                <div class="uppercase tracking-wide text-2xl text-white font-bold">{{ site.title }}</div>
                <a href="{{ page.product_link|default('#') }}" class="block mt-1 text-xl leading-tight font-semibold text-white visited:text-white hover:underline leading-relaxed">{{ page.product_lede }}</a>
                <hr>
                <p class="mt-2 text-lg text-gray-200 leading-snug">{{ page.product_blurb|nl2br }}</p>
            </div>
            </div>
        </header>
    {% endblock jumbo_wrapper %}

    {% block content '' %}
{% endblock %}


